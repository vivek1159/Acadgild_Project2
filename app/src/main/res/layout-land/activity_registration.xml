<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.vivek.collegemanagementsystem.Registration">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LightGrey"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.vivek.collegemanagementsystem.Registration"
        >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.example.acadgild.miniproject.Registration"
            >

            <TextView
                style="@style/Registration_TextView"
                android:layout_marginTop="15dp"
                android:layout_width="350dp"
                android:layout_centerHorizontal="true"
                android:text="Please enter the details below"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/Black"
                android:textStyle="bold" />

            <TextView
                style="@style/Registration_TextView"
                android:id="@+id/Text1"
                android:layout_marginTop="80dp"
                android:layout_marginStart="65dp"
                android:text="Email Address: "
                />

            <TextView
                style="@style/Registration_TextView"
                android:id="@+id/Text2"
                android:layout_below="@+id/Text1"
                android:layout_marginTop="20dp"
                android:layout_marginStart="65dp"
                android:text="Password: "
                />

            <TextView
                style="@style/Registration_TextView"
                android:id="@+id/Text3"
                android:layout_below="@+id/Text2"
                android:layout_marginTop="20dp"
                android:layout_marginStart="65dp"
                android:text="Confirm Password: "
                />


            <TextView
                style="@style/Registration_EditText"
                android:layout_width="250dp"
                android:id="@+id/Registration_EmailAddress"
                android:layout_alignTop="@+id/Text1"
                android:layout_toEndOf="@+id/Text1"
                android:enabled="false"
                android:layout_marginStart="15dp"
                android:maxLength="50" />

            <EditText
                style="@style/Registration_EditText"
                android:layout_width="250dp"
                android:id="@+id/Registration_Password"
                android:layout_alignTop="@+id/Text2"
                android:layout_toEndOf="@+id/Text2"
                android:inputType="textPassword"
                android:layout_marginStart="15dp"
                android:maxLength="15" />

            <EditText
                style="@style/Registration_EditText"
                android:layout_width="250dp"
                android:id="@+id/Registration_ConfirmPassword"
                android:layout_alignTop="@+id/Text3"
                android:layout_toEndOf="@+id/Text3"
                android:inputType="textPassword"
                android:layout_marginStart="15dp"
                android:maxLength="15" />


            <Button
                android:id="@+id/Registration_ProceedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Text3"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="55dp"
                android:layout_marginTop="40dp"
                android:background="@color/RoyalBlue"
                android:onClick="onClickProceedButton"
                android:text="PROCEED"
                android:textColor="@color/White"
                />

        </RelativeLayout>

    </ScrollView>


</android.support.design.widget.CoordinatorLayout>
