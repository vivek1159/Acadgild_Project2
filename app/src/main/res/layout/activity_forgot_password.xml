<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.vivek.collegemanagementsystem.ForgotPassword">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.vivek.collegemanagementsystem.Registration"
        >

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:id="@+id/ForgotPassword_EmailAddress"
            android:background="@drawable/login_edit_text_style"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:maxLength="50"
            android:inputType="textEmailAddress"
            android:hint=" Email Address"
            android:textColor="@color/Black"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:id="@+id/ForgotPassword_MobileNumber"
            android:background="@drawable/login_edit_text_style"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:inputType="number"
            android:maxLength="11"
            android:hint=" Mobile Number"
            android:textColor="@color/Black"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/ForgotPassword_Button"
            android:layout_below="@+id/ForgotPassword_MobileNumber"
            android:layout_marginTop="40dp"
            android:layout_alignEnd="@+id/ForgotPassword_MobileNumber"
            android:text="PROCEED"
            android:background="@color/RoyalBlue"
            android:onClick="onClickProceed"
            android:textColor="@color/White"
            android:textSize="17sp"
            />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
