<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.vivek.collegemanagementsystem.ProfessorRegistration">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LightGrey"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.acadgild.miniproject.studentRegistration">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="5dp"
            android:paddingRight="7dp"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/Text1"
                style="@style/StudentRegistration_TextView"
                android:layout_marginTop="15dp"
                android:text="First Name: "
                />

            <TextView
                android:id="@+id/Text2"
                style="@style/StudentRegistration_TextView"
                android:layout_below="@+id/Text1"
                android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
                android:text="Last Name: "
                />

            <TextView
                android:id="@+id/Text3"
                style="@style/StudentRegistration_TextView"
                android:layout_below="@+id/Text2"
                android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
                android:text="Date of Birth: "
                />

            <TextView
                android:id="@+id/Text4"
                style="@style/StudentRegistration_TextView"
                android:layout_below="@+id/Text3"
                android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
                android:text="Gender "
                />

            <TextView
                android:id="@+id/Text5"
                style="@style/StudentRegistration_TextView"
                android:layout_below="@+id/Text4"
                android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
                android:text="Phone Number: "
                />

            <TextView
                android:id="@+id/Text6"
                style="@style/StudentRegistration_TextView"
                android:layout_below="@+id/Text5"
                android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
                android:text="Address: "
                />

            <TextView
                android:id="@+id/Text7"
                style="@style/StudentRegistration_TextView"
                android:layout_below="@+id/Text6"
                android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
                android:text="Email Address: "
                />

            <TextView
                android:id="@+id/Text8"
                style="@style/StudentRegistration_TextView"
                android:layout_below="@+id/Text7"
                android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
                android:text="Department: "
                />

            <TextView
                android:id="@+id/Text9"
                style="@style/StudentRegistration_TextView"
                android:layout_below="@+id/Text8"
                android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
                android:text="Max. Qualification: "
                />


            <EditText
                android:id="@+id/ProfessorRegistration_FirstName"
                android:layout_width="@dimen/Registration_EditText_Width"
                android:layout_height="@dimen/Registration_TextView_Height"
                android:layout_marginStart="@dimen/Registration_EditText_MarginStart"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/Text1"
                android:background="@drawable/login_edit_text_style"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:maxLength="25" />

            <EditText
                android:id="@+id/ProfessorRegistration_LastName"
                android:layout_width="@dimen/Registration_EditText_Width"
                android:layout_height="@dimen/Registration_TextView_Height"
                android:layout_below="@+id/ProfessorRegistration_FirstName"
                android:layout_marginStart="@dimen/Registration_EditText_MarginStart"
                android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
                android:layout_toEndOf="@+id/Text2"
                android:background="@drawable/login_edit_text_style"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:maxLength="30" />

            <EditText
                android:id="@+id/ProfessorRegistration_Date"
                android:layout_width="30dp"
                android:layout_height="@dimen/Registration_TextView_Height"
                android:layout_below="@+id/ProfessorRegistration_LastName"
                android:layout_marginStart="@dimen/Registration_EditText_MarginStart"
                android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
                android:layout_toEndOf="@+id/Text3"
                android:background="@drawable/login_edit_text_style"
                android:gravity="center_vertical"
                android:hint="DD"
                android:inputType="number"
                android:maxLength="2" />

            <EditText
                android:id="@+id/ProfessorRegistration_Month"
                android:layout_width="35dp"
                android:layout_height="@dimen/Registration_TextView_Height"
                android:layout_below="@+id/ProfessorRegistration_LastName"
                android:layout_marginStart="@dimen/Registration_EditText_MarginStart"
                android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
                android:layout_toEndOf="@+id/ProfessorRegistration_Date"
                android:background="@drawable/login_edit_text_style"
                android:gravity="center_vertical"
                android:hint="MM"
                android:inputType="number"
                android:maxLength="2" />

            <EditText
                android:id="@+id/ProfessorRegistration_Year"
                android:layout_width="50dp"
                android:layout_height="@dimen/Registration_TextView_Height"
                android:layout_below="@+id/ProfessorRegistration_LastName"
                android:layout_marginStart="@dimen/Registration_EditText_MarginStart"
                android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
                android:layout_toEndOf="@+id/ProfessorRegistration_Month"
                android:background="@drawable/login_edit_text_style"
                android:gravity="center_vertical"
                android:hint="YYYY"
                android:inputType="number"
                android:maxLength="4" />

            <Spinner
                android:id="@+id/ProfessorRegistration_Gender"
                android:layout_width="@dimen/Registration_EditText_Width"
                android:layout_height="@dimen/Registration_TextView_Height"
                android:layout_below="@+id/ProfessorRegistration_Date"
                android:layout_toEndOf="@+id/Text4"
                android:layout_marginStart="@dimen/Registration_EditText_MarginStart"
                android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
                />

            <EditText
                android:id="@+id/ProfessorRegistration_PhoneNumber"
                android:layout_width="@dimen/Registration_EditText_Width"
                android:layout_height="@dimen/Registration_TextView_Height"
                android:layout_below="@+id/ProfessorRegistration_Gender"
                android:layout_marginStart="@dimen/Registration_EditText_MarginStart"
                android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
                android:layout_toEndOf="@+id/Text4"
                android:background="@drawable/login_edit_text_style"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:maxLength="14" />


            <EditText
                android:id="@+id/ProfessorRegistration_Address"
                android:layout_width="@dimen/Registration_EditText_Width"
                android:layout_height="@dimen/Registration_TextView_Height"
                android:layout_below="@+id/ProfessorRegistration_PhoneNumber"
                android:layout_marginStart="@dimen/Registration_EditText_MarginStart"
                android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
                android:layout_toEndOf="@+id/Text5"
                android:background="@drawable/login_edit_text_style"
                android:gravity="center_vertical"
                android:inputType="text"
                android:maxLength="25" />

            <EditText
                android:id="@+id/ProfessorRegistration_EmailAddress"
                android:layout_width="@dimen/Registration_EditText_Width"
                android:layout_height="@dimen/Registration_TextView_Height"
                android:layout_below="@+id/ProfessorRegistration_Address"
                android:layout_marginStart="@dimen/Registration_EditText_MarginStart"
                android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
                android:layout_toEndOf="@+id/Text6"
                android:background="@drawable/login_edit_text_style"
                android:gravity="center_vertical"
                android:inputType="textEmailAddress"
                android:maxLength="50" />

            <Spinner
                android:id="@+id/ProfessorRegistration_Department"
                android:layout_width="@dimen/Registration_EditText_Width"
                android:layout_height="@dimen/Registration_TextView_Height"
                android:layout_alignStart="@+id/ProfessorRegistration_EmailAddress"
                android:layout_alignTop="@+id/Text8"
                />

            <EditText
                android:id="@+id/ProfessorRegistration_HighestQualification"
                android:layout_width="@dimen/Registration_EditText_Width"
                android:layout_height="@dimen/Registration_TextView_Height"
                android:layout_alignStart="@+id/ProfessorRegistration_EmailAddress"
                android:layout_below="@+id/ProfessorRegistration_Department"
                android:layout_marginStart="@dimen/Registration_EditText_MarginStart"
                android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
                android:background="@drawable/login_edit_text_style"
                android:gravity="center_vertical"
                />

            <Button
                android:id="@+id/ProfessorRegistration_SubmitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Text9"
                android:layout_marginStart="55dp"
                android:layout_marginTop="20dp"
                android:background="@color/RoyalBlue"
                android:textColor="@color/White"
                android:onClick="onClickSubmitButton"
                android:text="SUBMIT" />

            <Button
                android:id="@+id/ProfessorRegistration_ClearButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Text9"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/ProfessorRegistration_SubmitButton"
                android:background="@color/RoyalBlue"
                android:textColor="@color/White"
                android:onClick="onClickClearButton"
                android:text="Clear" />


        </RelativeLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
