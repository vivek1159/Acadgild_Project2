<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vivek.collegemanagementsystem.SubjectDetails">

    <TextView
        android:id="@+id/Text1"
        style="@style/StudentRegistration_TextView"
        android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
        android:text="Department: "
        />

    <TextView
        android:id="@+id/Text2"
        style="@style/StudentRegistration_TextView"
        android:layout_below="@+id/Text1"
        android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
        android:text="Year: "
        />


    <TextView
        android:id="@+id/Text3"
        style="@style/StudentRegistration_TextView"
        android:layout_below="@+id/Text2"
        android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
        android:text="Section: "
        />


    <TextView
        android:id="@+id/Text4"
        style="@style/StudentRegistration_TextView"
        android:layout_below="@+id/Text3"
        android:layout_marginTop="@dimen/Registration_TextView_MarginTop"
        android:text="Subject: "
        />

    <Spinner
        android:id="@+id/ProfessorUpdate_Department"
        android:layout_width="@dimen/Registration_EditText_Width"
        android:layout_height="@dimen/Registration_TextView_Height"
        android:layout_toEndOf="@+id/Text1"
        android:layout_alignTop="@+id/Text1"
        />

    <Spinner
        android:id="@+id/ProfessorUpdate_ClassYear"
        android:layout_width="@dimen/Registration_EditText_Width"
        android:layout_height="@dimen/Registration_TextView_Height"
        android:layout_toEndOf="@+id/Text2"
        android:layout_alignTop="@+id/Text2"
        />

    <Spinner
        android:id="@+id/ProfessorUpdate_ClassSection"
        android:layout_width="@dimen/Registration_EditText_Width"
        android:layout_height="@dimen/Registration_TextView_Height"
        android:layout_toEndOf="@+id/Text3"
        android:layout_alignTop="@+id/Text3"
        />

    <Spinner
        android:id="@+id/ProfessorUpdate_Subject"
        android:layout_width="@dimen/Registration_EditText_Width"
        android:layout_height="@dimen/Registration_TextView_Height"
        android:layout_toEndOf="@+id/Text4"
        android:layout_alignTop="@+id/Text4"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Text4"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="SAVE"
        android:background="@color/RoyalBlue"
        android:textColor="@color/White"
        android:onClick="onClickSaveButton"
        />

</RelativeLayout>
